@model LetterQuiz
@{
    ViewData["Title"] = "Index";
}



<h2>ABC's</h2>

<p>Learn your letters!</p>



<div class="container">
    <div class="row">
        <div class="col">
            @(Model.Answer)
        </div>
        <div class="col-6">

        </div>
        <div class="col">
            

            @foreach (var letter in Model.AllLetters)
            {
                <button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                    <img src="~/lib/images/@(letter).jpg" alt="A" width="auto" height="200px" class="img-fluid"/>
                </button>
            }
        </div>
    </div>

</div>



